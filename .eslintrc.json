{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "globals": {
    "Uint8Array": true,
    "ArrayBuffer": true,
    "Float32Array": true,
    "Map": true,
    "WeakMap": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "warn",
    "quotes": [
      "error",
      "single"
    ]
  }
}
